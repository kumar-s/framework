<div id="configurationPage">
	<div class="second_title">
		<div class="code_anal">
			<input type="submit" name="env_pop" data-i18n="[value]configuration.label.addenvironment"  class="btn btn_style">
			 <div id="env_pop" class="dyn_popup popup_bg" style="display:none;">
                <table width="100%" border="0" cellspacing="0" cellpadding="5">
                <tr>
                	<td>Name <sup>*</sup></td>
                    <td>Description <sup>*</sup></td>
                    <td>&nbsp;</td>
                </tr>
                <tr>
                	<td><input type="text" class="pop_txt dyn_popup_text" name="envName" placeholder="Environment Name"></td>
                    <td><input type="text" class="pop_txt dyn_popup_text" name="envDesc" placeholder="Environment Description"></td>
                    <td><input type="button" class="btn btn_style" name="addEnv" value="Add"></td>
                </tr>
                <tr>
                	<td colspan="3">
                    	<div class="env_border">	                        	
                            <table class="table table-striped table_border table-bordered add_env" cellpadding="0" cellspacing="0" border="0">
                            <thead>
                                <tr>
                                	<th>Default</th>
                                    <th>Environment</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td colspan="2">
										<ul class="connected list" id="content_Env" name="envList">
											{{#configurationList}}
												{{#if name}}
													<li name="{{name}}">
														{{#if defaultEnv}}
														<div><input type="radio" name="optionsRadiosfd" checked></div>
														{{else}}
														<div><input type="radio" name="optionsRadiosfd"></div>
														{{/if}}
														<div name="envListName" class="envlistname">{{name}}</div>
														<input type="hidden" name="envListDesc" value="{{desc}}">
													</li>
													{{else}}
													<div>No Environments available</div>
												{{/if}}
											{{/configurationList}}
                                        </ul>
                                    </td>
                                </tr>
                            </tbody>
                          </table>
                            
                            <!--env_border div ends here -->	
                        </div>
						<div class="flt_left" id="errdisplay" > </div>
                        <div class="flt_right">
                            <input type="button" value="Ok" name="saveEnvironment" class="btn btn_style">
                            <input type="button" value="Close" class="btn btn_style dyn_popup_close">
                        </div>
                    </td>
                </tr>
                </table>
                <!--env_pop div ends here -->	
            </div>
			<!--code_anal div ends here -->
		</div>
		<!--second_title div ends here -->
	</div>
		
	<section class="features_content_main">
		{{#if configurationList}}
		<table class="table table-striped table_border table-bordered" cellpadding="0" cellspacing="0" border="0">
			  <thead>
				<tr>
				  <th data-i18n="configuration.label.name"></th>
				  <th data-i18n="configuration.label.description"></th>
				  <th data-i18n="configuration.label.configure"></th>
				  <th data-i18n="configuration.label.clone"></th>
				  <th data-i18n="configuration.label.delete"></th>
				  <th>&nbsp;</th>
				</tr>
			  </thead>
			  <tbody>
				{{#configurationList}}
			  <tr class="envlist">
				<td name='envNames'>{{name}} {{#if defaultEnv}} (Default) {{else}} &nbsp; {{/if}}</td>  
				<td>{{desc}}</td>
				<td><a class="tooltiptop" href="#" data-toggle="tooltip" data-original-title="Configure" name="editConfiguration" key={{name}}>
				<img src="themes/default/images/helios/configure_icon.png" width="15" height="16" border="0" alt=""></a></td>
				<td>
					{{#if ../userPermissions.manageConfiguration}}
						<a class="tooltiptop" href="#" data-toggle="tooltip" data-original-title="Clone" name="clone_popup{{name}}">
							<img src="themes/default/images/helios/clone_icon.png" width="20" height="18" border="0" alt="">
						</a>
					{{else}}
						<img src="themes/default/images/helios/clone_icon_off.png" width="20" height="18" border="0" alt="">
					{{/if}}
					
					<div id="clone_popup{{name}}" type="{{name}}" class="dyn_popup popup_bg">
                        <table class="clonetable" width="100%" border="0" cellspacing="0" cellpadding="5">
                            <tr>
                                <td>Name <sup>*</sup></td>
                                <td>Description <sup>*</sup></td>
                                <td>&nbsp;</td>
                            </tr>
                            <tr>
                                <td><input type="text" class="cloneEnvName{{name}} dyn_popup_text envrName" placeholder="Environment Name" name="envrName"></td>
                                <td><input type="text" class="cloneEnvDesc{{name}} dyn_popup_text" placeholder="Environment Description" name="envrDesc"></td>
                            </tr>
                            <tr>
                                <td>
                                    <input type="checkbox" name="DefaultValue{{name}}" value="Set as Default">
								<span> <font style="vertical-align: -3px;"> &nbsp;&nbsp; Set as Default  </font></span>
								<span id="display" style="display:none;"> <font style="vertical-align: -3px;"> &nbsp; Enter a unique Name. </font></span>
								</td>
                                <!--<td>&nbsp;</td>-->
                                <td name={{name}}>
                                	<input type="button" name="cloneEnvr" class="btn btn_style" value="Clone">	
                                    <input type="button" value="Cancel" class="btn btn_style dyn_popup_close">
                                </td>    
                            </tr>
                        </table>
                        <!--env_pop div ends here -->	
                    </div>
				</td>
				<td>
					{{#if ../userPermissions.manageConfiguration}}
					
						{{#if defaultEnv}}
							<img src="themes/default/images/helios/delete_row_off.png" border="0" alt="">
						{{else}}
						<a name="{{name}}" class="tooltiptop" title="" data-placement="top" data-toggle="tooltip" href="#" data-original-title="Delete Row">
							<img src="themes/default/images/helios/delete_row.png" border="0" alt=""></a>
						{{/if}}	
					{{else}}
					
						<img src="themes/default/images/helios/delete_row_off.png" border="0" alt="">
					{{/if}}
				<div id="{{name}}" class="dyn_popup"> Are you sure to delete this ?
					<div>
						<input type="button" value="Yes" class="btn btn_style" name="deleteEnv">
						<input type="button" value="No" class="btn btn_style dyn_popup_close">
					</div>
				</div>
				</td>
				<td>&nbsp;</td>
			  </tr>
			{{/configurationList}}
			  </tbody>
		</table>
		{{else}}
		<div> No Environments Available </div>
		{{/if}}
		<!--features_content_main div ends here -->
	</section>

</div>	