	        <div class="login_right">
	        	<div class="loginhead">
					<div class="login_title" data-i18n="login.title;"></div>
					<div class="login_error_msg"></div>
					<div class="clear"></div>
				</div>
	        	<form>
	                <div class="control-group">
	                <div class="controls">
	               	 	<div id="usernameDiv" class="loginuser">
